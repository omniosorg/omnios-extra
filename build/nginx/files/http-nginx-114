source /lib/svc/share/smf_include.sh

typeset -r CONF_FILE="/etc/opt/ooce/nginx-1.14/nginx.conf"
typeset -r PIDFILE="/var/opt/ooce/nginx/run/nginx-1.14.pid"
typeset -r NGINX="/opt/ooce/nginx-1.14/sbin/nginx"

[[ ! -f ${CONF_FILE} ]] && exit $SMF_EXIT_ERR_CONFIG

case "$1" in
start)
        /bin/rm -f ${PIDFILE}
        [ -d /tmp/.nginx ] || mkdir /tmp/.nginx
        chmod 700 /tmp/.nginx
        exec ${NGINX} 2>&1
        ;;
*)
        echo "Unknown method."
        exit $SMF_EXIT_ERR_FATAL
        ;;
esac

# not reached
