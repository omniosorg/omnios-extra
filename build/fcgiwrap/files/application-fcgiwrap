. /lib/svc/share/smf_include.sh

PIDF=/var/opt/ooce/fcgiwrap/run/fcgiwrap.pid
SOCKF=/var/opt/ooce/fcgiwrap/run/fcgiwrap.sock

check_and_kill()
{
        PID=`head -1 $1`
        kill -0 $PID > /dev/null 2>&1
        [ $? -eq 0 ] && kill $PID
        [ -S $SOCKF ] && /usr/bin/rm -f $SOCKF
        [ -f $PIDF ] && /usr/bin/rm -f $PIDF
}

create_fcgiwrap_sock()
{
        /opt/ooce/sbin/fcgiwrap -s unix:$SOCKF &

        RETVAL=$?
        PID=$!
        [ $RETVAL -eq 0 ] && echo $PID > $PIDF
}

case "$1" in
'refresh')
        [ -f $PIDF ] && check_and_kill $PIDF
        create_fcgiwrap_sock
        ;;

'start')
        create_fcgiwrap_sock
        ;;

'stop')
        [ -f $PIDF ] && check_and_kill $PIDF
        ;;

*)
        echo "Usage: $0 { start | stop | refresh }"
        exit 1
        ;;

esac
exit 0


