+string GetOutputRoot() {
+  string base;
+  string home = GetHomeDir();
+  if (!home.empty()) {
+    base = home;
+  } else {
+    char buf[2048];
+    struct passwd pwbuf;
+    struct passwd *pw = NULL;
+    int uid = getuid();
+    int r = getpwuid_r(uid, &pwbuf, buf, 2048, &pw);
+    if (r != -1 && pw != NULL) {
+      base = pw->pw_dir;
+    }
+  }
+
+  if (!base.empty()) {
+    return blaze_util::JoinPath(base, ".cache/bazel");
+  }
+
+  return "/tmp";
+}
